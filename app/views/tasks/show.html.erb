<h2> <%= @task.title %></h2>
<p> <%= @task.details %></p>
<p> <%= link_to "Delete #{@task.title}",
    task_path(@task), method: :delete,
    data: { confirm: "Are you sure you want to delete #{@task.title}? "} %> </p>
<p> <%= link_to "See all tasks", tasks_path(@tasks) %> </p>
<p> <%= link_to "Edit #{@task.title}", edit_task_path(@task) %></p>
